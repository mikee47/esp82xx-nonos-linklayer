
CC			= $(TOOLS)gcc
AR			= $(TOOLS)ar
OC			= $(TOOLS)objcopy
OD			= $(TOOLS)objdump

BUILD		?= build

BUILD_FLAGS = \
    -Wall \
    -Wextra \
    -c \
    -Os \
    -g \
    -Wpointer-arith \
    -Wl,-EL \
    -fno-inline-functions \
    -nostdlib \
    -mlongcalls \
    -mtext-section-literals \
    -falign-functions=4 \
    -MMD \
    -std=gnu99 \
    -ffunction-sections \
    -fdata-sections \
    $(CFLAGS_EXTRA)

BUILD_DEFINES = \
    -D__ets__ \
    -DICACHE_FLASH \
    -U__STRICT_ANSI__ \
    -DLWIP_OPEN_SRC \
    -DLWIP_BUILD \
    -DUSE_OPTIMIZE_PRINTF
